<!DOCTYPE html>
<html>
  <head>
    <title>Surf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='bdy'>
  <div class="jumbotron">
  <nav class="navbar">
    <div class="container-fluid">
      <div class='navbar-header'>
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag('surf.svg',alt:'logo',class:'img-responsive media-object logo') %>
        <% end %>
        <a class='navbar-brand' href='/'>SURF &amp; CO BLOG</a>
      </div>
      <div class='navbar-right'>
        <ul class='nav navbar-nav'>
          <li class='navbar-text'><a href='#'>About</a></li>
          <li class='navbar-text'><a href='<%= new_post_path %>'>NewPost</a>
          <li class='navbar-text'><a href='#'>Search</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container-fluid">
    <h1 class="text-center">SURF & PADDLE CO</h1>
    <h6 class="text-center">An Ironyard academy project Est. Fall 2013'</h6>
  </div>
</div>

      <%= yield %>

<!-- bottom section -->
<div>
  <!-- This is the header for the bottom section -->
  <div class='bottom_header'>
    <h1 id='bottom_header_text'>Most Popular Posts</h1>
  </div>

  <!-- Four picture boxes -->
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 hoveropacity'>
        <%=link_to(image_tag('boat.jpeg'), controller:'posts', action:'show', id: Post.all.order(created_at: 'desc').second.id) %>
        <h6 class='position_title'><%= Post.all.order(created_at: 'desc').second.title %></h6>
      </div>
      <div class='col-xs-3 hoveropacity'>
        <%= link_to(image_tag('boat.jpeg'), controller:'posts', action:'show', id:Post.all.order(created_at: 'desc').third.id) %>
        <h6 class='position_title'><%= Post.all.order(created_at: 'desc').third.title %></h6>
      </div>
      <div class='col-xs-3 hoveropacity'>
        <%= link_to(image_tag('boat.jpeg'), controller:'posts', action:'show', id:Post.all.order(created_at: 'desc').fourth.id) %>
        <h6 class='position_title'><%= Post.all.order(created_at: 'desc').fourth.title %></h6>
      </div>
      <div class='col-xs-3 hoveropacity'>
        <%= link_to(image_tag('boat.jpeg'), controller:'posts', action:'show', id:Post.all.order(created_at: 'desc').fifth.id) %>
        <h6 class='position_title'><%= Post.all.order(created_at: 'desc').fifth.title %></h6>
      </div>
    </div>
  </div>

  <!-- Footer goes here -->
  <footer class="footer">
    <div class="container bottomnav">
      <div class='row'>
        <div class='col-xs-6'>
          <p>The Ironyard Copyright 2013.  All rights reserved</p>
        </div>
        <div class='col-xs-6 fnr'>
          <p>Nav item 1 |</p>
          <p>Nav item 2 |</p>
          <p>Nav item 3 |</p>
          <p>Nav item 4</p>
        </div>
      </div>
    </div>
  </footer>

</div>



  </body>
</html>
