
<% if @post.errors.any? %>
  <div class="bg-danger col-xs-12">
    <ul class="list-unstyled">
      <% @post.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_for @post do |f| %>

  <div>
    <%= f.label      :title %>
    <%= f.text_area  :title %>
  </div>
  <div>
    <%= f.label     :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label  :user_id %>
    <%= f.select :user_id, User.all.collect{|u| [u.name, u.id]} %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
