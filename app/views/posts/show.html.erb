<!-- Middle section with changing contents -->
<section class='container-fluid'>
   <div class='row'>
     <!-- left half -->
     <div class='col-sm-8'>
       <div class='row'>
         <h1><%= @post.title%></h1>
         <div class='row'>
           <h5 class='col-xs-2'><%= @post.user.name %></h5>
           <h5 class='col-xs-4'><%= @post.created_at %></h5>
         </div>
       </div>
       <div class='row'>
         <h2><%= @post.body %></h2>
       </div>
       <div class='row'>
         <!-- the three buttons go here -->
         <a href='#'><button type='button'>Read Comments</button></a>
         <a href='#'><button type='button'>Read Later</button></a>
         <a href='#'><button type='button'>Share This Post</button></a>
       </div>
     </div>
     <!-- right half -->
     <div class='col-sm-4'>
       <div class='container-flex rc text-center'>
         <!-- user image goes here -->
         <div id='squeeze'>
           <%= image_tag('user.jpeg', class: "img-circle") %>
         </div>
         <%= @post.user.name %>
         <h5>Twitter Facebook Instagram</h5>
         <!-- Ad image -->
         <%= image_tag('ad.jpeg') %>
         <a href='#'>About this ad</a>
         <h2>Sidebar section heading</h2>
         <!-- Sidebar text -->
       </div>
     </div>
   </div>
</section>
